#!/usr/bin/env bash

run(){
    echo pacman "$@"
    pacman "$@"
}

runs(){
    echo sudo pacman "$@"
    sudo pacman "$@"
}


usage(){
    cat <<__EOF__
Simple Pacman Wrapper
usage: pac COMMAND [OPTIONS] [TARGET]
    COMMANDS:
        install
        update
        list
        remove
	info
        help
    OPTIONS
    TARGET
        see pacman(8)
__EOF__

    [ "$1" == "help" ] && exit 0 || exit 1
}


command=$1
shift
case $command in
    install)
        runs -S "$@"
        ;;
    update)
        run -Syu "$@"
        ;;
    remove)
        runs -Rs "$@"
        ;;
    info)
        run -Si "$@"
        ;;
    search)
        run -Ss "$@"
        ;;
    list)
        run -Q "$@"
        ;;
    *)
        usage
        ;;
esac
